<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerLayout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:minHeight="?attr/actionBarSize"
            android:background="@android:color/holo_orange_dark">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Home"
                android:textColor="@android:color/white"
                android:textAppearance="?android:attr/textAppearanceMedium"/>
        </android.support.v7.widget.Toolbar>

        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:layout_below="@id/toolbar"
            android:background="@color/demo_gray"
            android:paddingLeft="20dp">

            <LinearLayout
                android:id="@+id/times_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:background="@color/dark_gray"
                android:layout_alignParentRight="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Left"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/time_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="06:00:00"
                    android:textStyle="bold"
                    android:textColor="@android:color/holo_red_dark"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/titles_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Question Paper"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Question Number"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/hyphen_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/titles_layout"
                android:layout_marginLeft="20dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:layout_marginBottom="5dp"
                    android:paddingTop="2dp"
                    android:textColor="@android:color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="-"
                    android:textColor="@android:color/black"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/values_layout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_toRightOf="@id/hyphen_layout"
                android:layout_marginLeft="20dp">
                <TextView
                    android:id="@+id/question_paper"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gravitation"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/black"/>
                <TextView
                    android:id="@+id/question_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="1 of 94"
                    android:textColor="@android:color/black"/>
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/separator1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/header"
            android:background="@android:color/holo_orange_dark"/>

        <RelativeLayout
            android:id="@+id/questions_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator1">
            <TextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="What is the capital of Kerala?"
                android:textColor="@android:color/black"
                android:padding="20dp"
                android:textAppearance="?android:attr/textAppearanceMedium"/>

            <View
                android:id="@+id/separator2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/question"
                android:background="@android:color/holo_orange_dark"/>

            <ListView
                android:id="@+id/listview_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/separator2"
                android:dividerHeight="1dp"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="false"
                android:padding="10dp"
                android:background="@color/demo_gray">
            </ListView>
        </RelativeLayout>

        <View
            android:id="@+id/separator3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/questions_layout"
            android:background="@android:color/holo_orange_dark"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/separator3"
            android:padding="20dp">
            <Button
                android:id="@+id/finish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/ash_black"
                android:text="FINISH"
                android:textColor="@android:color/white"/>

            <Button
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="NEXT"
                android:background="@color/ash_black"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </RelativeLayout>

    <!--Slide Menu-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="320dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@android:color/white"
        android:scrollbars="vertical"
        android:dividerHeight="1dp">

    </android.support.v7.widget.RecyclerView>
</android.support.v4.widget.DrawerLayout>